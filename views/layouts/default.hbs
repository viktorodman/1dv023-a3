<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <title>Assignment 2</title>
</head>
<body>

    <template id="comment">
            <div class="chip">
                <a class="authorLink" target="_blank"><span class="commentAuthor"></span></a>
                <img class="commentAuthorImg" alt="Comment Author">
            </div>
            <span class="commentDate"></span>
            <blockquote class="issueComment"></blockquote>
    </template>

    <template id="issue">
        <div class="issueSection">
            <div class="issueNotification">
                <span class="new badge hide" data-badge-caption="New Issue"></span>
            </div>
            <div class="issueBox">
                <span class="issueTitle"></span>
                <input class="pID" type="hidden" name="projectID" value="">
                <input class="iID" type="hidden" name="issueID" value="">
                <br>
                <a class="btn-small issueButton indigo darken-4">Show Issue</a>
            </div>
        </div>
    </template>

    <template id="issueInfo">
        <input type="hidden" name="projectID" id="hiddenProjectID">
        <input type="hidden" name="issueID" id="hiddenIssueID">

        <div class="row">
            <div class="col s12">
                <h4 id="titleArea"></h4>
            </div>
        </div>
        {{!-- Date --}}
        <div class="row">
            <div class="col s12">
                <span></span>
                <p id="dateArea" class="commentDate"></p> 
            </div>
        </div>
        {{!-- /Date --}}
         {{!-- Author --}}
        <div class="row">
            <div class="col s12">
                <span>Author</span>
                <div class="chip">
                    <img id="authorImage" src="" alt="Issue author">
                    <a id="authorLink" target="_blank"><span id="issueAuthor"></span></a>
                </div>
            </div>
        </div>
        {{!-- /Author --}}
        {{!-- Description --}}
            <div class="row">
                <div class="col s12">
                    <span>Description: </span>
                    <span id="issueDescription"></span>
                </div>
            </div>
        {{!-- /Description --}}
        <hr>
        {{!-- Comments --}}
        <div class="row">
            <div class="col s12">
                <h5>Comments</h5>
                <div id="issueComments">

                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <form class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="commentTextArea" class="materialize-textarea"></textarea>
                    <label for="commentTextArea">Add comment</label>
                </div>
            </div>
            </form>
            <a id="commentButton" class="btn-small indigo darken-4">Comment</a>
        </div>
        {{!-- /Comments --}}
    </template>


    {{>header}}
    <main>
        {{{body}}}
    </main>
    {{>footer}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>